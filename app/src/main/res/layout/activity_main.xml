<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFBB56">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!-- <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/> -->

        <FrameLayout
            android:id="@+id/current_fl"
            android:layout_width="0dp"
            android:layout_height="330dp"
            android:layout_margin="16dp"
            android:background="@drawable/big_card"
            android:elevation="@dimen/elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>


        <ImageView
            android:id="@+id/current_icon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintVertical_bias="0.2"
            android:elevation="@dimen/elevation"
            app:layout_constraintBottom_toBottomOf="@+id/current_fl"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/current_fl"
            tools:src="@drawable/example" />

        <TextView
            android:id="@+id/current_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation"
            tools:text="43℃"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_icon" />


        <TextView
            android:id="@+id/current_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-16dp"
            android:elevation="@dimen/elevation"
            tools:text="Ростов-на-Дону"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_temperature" />

        <FrameLayout
            android:elevation="@dimen/elevation"
            android:id="@+id/tomorrow_fl"
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/big_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/center_guideline"
            app:layout_constraintTop_toBottomOf="@id/current_fl">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/after_tomorrow_fl"
            android:layout_width="0dp"
            android:layout_height="168dp"
            android:layout_marginTop="16dp"
            android:elevation="@dimen/elevation"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/big_card"
            app:layout_constraintEnd_toEndOf="@id/center_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/current_fl">

        </FrameLayout>

        <FrameLayout
            android:elevation="@dimen/elevation"
            android:id="@+id/wind_speed_fl"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="16dp"
            android:background="@drawable/big_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/after_tomorrow_fl">

        </FrameLayout>

        <FrameLayout
            android:elevation="@dimen/elevation"
            android:id="@+id/cloud_fl"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="16dp"
            android:background="@drawable/big_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wind_speed_fl">

        </FrameLayout>

        <FrameLayout
            android:elevation="@dimen/elevation"
            android:id="@+id/other_info"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_margin="16dp"
            android:background="@drawable/big_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cloud_fl">

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="Powered by WeatherAPI.com"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/other_info"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <ProgressBar
            android:elevation="@dimen/elevation"
            android:id="@+id/load_pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>